<div id="comment_<%= comment.id %>">
<h4><%= h comment.title %></h4>
<%= h comment.comment %><br/>
<small>Comment posted <%= time_ago_in_words(comment.created_at) %> ago by <%= link_to comment.user.login %> <%= link_to_remote "Delete", :url => { :controller => :comment, :action => :destroy, :id => comment } if current_user == comment.user %></small>
</div>
