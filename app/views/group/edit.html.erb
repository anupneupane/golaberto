<%= google_jquery %>
<%= google_jqueryui %>
<%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/themes/blitzer/jquery-ui.css" %>
<script type="text/javascript">
  jQuery.noConflict();
</script>


<% content_for :main_title do %>
  <%= @group.phase.championship.full_name %>
<% end %>

<%= error_messages_for 'group' %>
<%= error_messages_for 'team_group', :object => @group.team_groups %>

<h2><%= @group.phase.name %></h2>

<%= form_for @group, :url => { :action => :update, :id => @group } do |f| %>
  <table>
    <tr><td><%= _("Name") %>:</td><td><%= f.text_field :name %></td></tr>
    <tr><td><%= _("Promoted") %>:</td><td><%= f.text_field :promoted, :size => 2 %></td></tr>
    <tr><td><%= _("Relegated") %>:</td><td><%= f.text_field :relegated, :size => 2 %></td></tr>
  </table>

  <p>
  <%= _("Teams") %><br/>
  <%= _("Number of teams") %>:
  <input type="text" id="team_number" value="<%= @group.team_groups.size %>" size="2"/><br/>
  <div id="team_select">
    <%= render :partial => "team_list" %>
  </div>

  <%= submit_tag _("Update") %><br/>
<% end %>
