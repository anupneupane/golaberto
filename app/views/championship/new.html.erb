<%= error_messages_for 'championship' %>
<%= form_for @championship, :url => { :action => "create" } do |f| %>
  <%= _("Name") %>: <%= f.text_field :name %><br/>
  <%= _("Begin") %>: <%= f.date_select :begin %><br/>
  <%= _("End") %>: <%= f.date_select :end %><br/>
  <%= _("Points for win") %>: <%= f.text_field :point_win, :size => 2 %><br/>
  <%= _("Points for draw") %>: <%= f.text_field :point_draw, :size => 2 %><br/>
  <%= _("Points for loss") %>: <%= f.text_field :point_loss, :size => 2 %><br/>
  <%= _("Category") %>:
  <select id="championship_category_id" name="championship[category_id]">
    <%= options_from_collection_for_select @categories, "id", "name" %>
  </select><br/>
  <%= f.label :show_country, _("Show country flags") %>:
  <%= f.check_box :show_country %><br/>
  <%= submit_tag _("Create") %>
<% end %>
