div_id = "#{@home_away}_add_player_list"
page.replace_html div_id
unless @total == 0
  page.insert_html :bottom, div_id, :partial => "player",
                                    :collection => @players
  if @player_pages.page_count > 1
    page_options = { :url => { :action => :list_players, :team => @team, :game => @game, :name => @name } }
    page.insert_html :bottom, div_id, pagination_links_remote(@player_pages, { :window_size => 1 }, page_options)
  end
end
